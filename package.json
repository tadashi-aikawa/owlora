{
  "name": "owlora",
  "version": "0.40.0",
  "main": "index.js",
  "repository": "https://github.com/tadashi-aikawa/owlora.git",
  "author": "tadashi-aikawa <syou.maman@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server --config webpack.config.dev.js --progress --host 0.0.0.0 --watch-poll",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "clean-visualized-test": "rm -rf .captures .reg",
    "capture-images": "(cd storybook-static && python -m SimpleHTTPServer 6006) & CI=yes loki --chromeConcurrency 1 --output .captures --chromeFlags='--headless --disable-gpu --hide-scrollbars --no-sandbox'; pkill python",
    "compare-images": "reg-suit sync-expected && reg-suit compare",
    "publish-report": "reg-suit publish",
    "visualized-test": "run-s build-storybook clean-visualized-test capture-images compare-images publish-report",
    "build": "webpack --config webpack.config.pro.js",
    "build-storybook": "build-storybook",
    "deploy": "firebase deploy --project owlora-mamansoft",
    "release:github": "cross-conf-env git commit -am \":package: Deploy $npm_package_version\" && cross-conf-env git tag $npm_package_version -m $npm_package_version && git push --tags && git push",
    "release": "run-s test build release:github deploy"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "dependencies": {
    "@types/js-yaml": "^3.9.0",
    "@types/lodash": "^4.14.71",
    "@types/query-string": "^5.0.0",
    "@types/react": "^15.6.0",
    "@types/react-dom": "^15.5.1",
    "@types/react-redux": "^4.4.47",
    "@types/react-redux-toastr": "^7.0.0",
    "@types/uuid": "^3.4.0",
    "axios": "^0.16.2",
    "js-yaml": "^3.9.0",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "query-string": "^5.0.0",
    "react": "^15.6.1",
    "react-dnd": "^2.4.0",
    "react-dnd-html5-backend": "^2.4.1",
    "react-dnd-multi-backend": "^2.3.7",
    "react-dom": "^15.6.1",
    "react-emojione": "^3.1.10",
    "react-redux": "^5.0.5",
    "react-redux-firebase": "^1.4.6",
    "react-redux-toastr": "^7.1.0",
    "redux": "^3.7.1",
    "redux-localstorage": "^0.4.1",
    "redux-saga": "^0.15.6",
    "semantic-ui-css": "^2.2.12",
    "semantic-ui-react": "^0.76.0",
    "typestyle": "^1.3.8",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@storybook/addon-knobs": "^3.1.9",
    "@storybook/addon-notes": "^3.1.6",
    "@storybook/addon-storyshots": "^3.1.9",
    "@storybook/react": "^3.1.9",
    "@types/jest": "^20.0.5",
    "awesome-typescript-loader": "^3.2.2",
    "cross-conf-env": "^1.1.2",
    "css-loader": "^0.28.4",
    "firebase-tools": "^3.14.0",
    "image-loader": "^0.0.1",
    "jest": "^21.2.1",
    "jest-cli": "^20.0.4",
    "loki": "github:tadashi-aikawa/loki#master",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.0",
    "react-test-renderer": "^15.6.1",
    "reg-keygen-git-hash-plugin": "^0.5.8",
    "reg-notify-slack-plugin": "^0.5.6",
    "reg-publish-s3-plugin": "^0.5.6",
    "reg-suit": "^0.5.9",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "ts-jest": "^20.0.7",
    "typescript": "^2.4.2",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "url-loader": "^0.5.9",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.6.1",
    "webpack-merge": "^4.1.1"
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.app",
        "waitBeforeCapture": [
          {
            "kind": "^DailyCard$",
            "story": "^Summary$",
            "millSec": 10000
          },
          {
            "kind": ".+",
            "story": ".+",
            "millSec": 1000
          }
        ],
        "width": 1920,
        "height": 0
      }
    }
  }
}
